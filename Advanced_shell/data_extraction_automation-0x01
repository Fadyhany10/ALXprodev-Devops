#!/bin/bash

# Extract fields using jq
NAME=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
HEIGHT=$(jq -r '.height' data.json)
WEIGHT=$(jq -r '.weight' data.json)
TYPE=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize type

# Convert height decimeters to meters, weight hectograms to kg
HEIGHT_METERS=$(awk "BEGIN { printf \"%.1f\", $HEIGHT / 10 }")
WEIGHT_KG=$(awk "BEGIN { printf \"%.0f\", $WEIGHT / 10 }")

# Final output
echo "$NAME is of type $TYPE, weighs ${WEIGHT_KG}kg, and is ${HEIGHT_METERS}m tall."
